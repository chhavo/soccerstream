<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @team.team_name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

              <dt>Live game</dt>
              <dd><%= @team.live_game %></dd>

              <dt>Upcoming game</dt>
              <dd><%= @team.upcoming_game %></dd>

              <dt>Live commentary</dt>
              <dd><%= @team.live_commentary %></dd>

            </dl>

<!-- Team News Piece -->

            <dl class="dl-horizontal">
            <dt>Team News</dt>
            <% @teamnews_title.each do |team| %>

                <dd><a href = <% @teamnews_link[@teamnews_title.index(team)] %>><%= team %> </a></dd>

            <% end %>

            </dl>

            <div class="btn-group btn-group-justified">
              <a href="/teams" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/teams/<%= @team.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_team/<%= @team.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Team Chat Feature -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Team <%= @team.team_name %> Chat</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">

            <form action="/create_comment" method="post" class="form-horizontal">
            <!-- Hidden input for authenticity token to protect from forgery -->
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

              <!-- Label and input for team tweet -->
              <div class="form-group">
                <label for="team_name" class="col-sm-2 control-label">
                Chat
                </label>

               <div class="col-sm-10">
                 <input type="text" id="comments" name="comments" placeholder="Chat" class="form-control">
                 <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.email %>">
                 <input type="hidden" id="team_name" name="team_name" placeholder="Team name" class="form-control" value="<%= @team.team_name %>">

                 <div class="form-group">
                   <div class="col-sm-offset-2 col-sm-10">
                     <button class="btn btn-success">
                       Submit
                     </button>
                   </div>
                 </div>
               </div>
              </div>
             </form>



      <!--  Display Team Chats -->

            <dl class="dl-horizontal">

              <dt><dd><%= @team.live_commentary %></dd></dt>

            </dl>


            <div class="btn-group btn-group-justified">
              <a href="/teams" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/teams/<%= @team.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_team/<%= @team.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- End responsive panel example -->
